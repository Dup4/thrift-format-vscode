{
  "name": "thrift-formatter",
  "displayName": "Thrift Formatter",
  "version": "0.0.22",
  "private": true,
  "publisher": "dup4",
  "packageManager": "pnpm@7.32.4",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/Dup4/thrift-format-vscode#readme",
  "bugs": {
    "url": "https://github.com/Dup4/thrift-format-vscode/issues"
  },
  "license": "MIT",
  "author": "Dup4 <lyuzhi.pan@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dup4/thrift-format-vscode.git"
  },
  "main": "./dist/index.js",
  "icons": {
    "default": "res/logo.png"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onLanguage:thrift"
  ],
  "categories": [
    "Formatters"
  ],
  "contributes": {
    "configuration": {
      "title": "Thrift Formatter"
    },
    "languages": [
      {
        "id": "thrift",
        "extensions": [
          ".thrift"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "test": "vitest",
    "lint": "run-p lint:*",
    "lint:build": "tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:style": "prettier --check src/*.ts src/**/*.ts",
    "format": "run-p format:*",
    "format:eslint": "eslint --fix .",
    "format:style": "prettier --write src/*.ts src/**/*.ts",
    "vscode:prepublish": "npm run build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "release": "bumpp --commit --push --tag && nr pack && nr publish",
    "clean": "rimraf *.vsix"
  },
  "devDependencies": {
    "@antfu/ni": "^0.17.2",
    "@babel/types": "^7.21.5",
    "@types/node": "^17.0.45",
    "@types/vscode": "1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "bumpp": "^7.2.0",
    "eslint": "^8.40.0",
    "esmo": "^0.14.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.32.4",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "thrift-format-ts": "^0.0.10",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "vite": "^2.9.15",
    "vitest": "^0.7.13",
    "vsce": "^2.15.0"
  }
}
